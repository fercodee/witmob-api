// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contato {
  id               Int                @id @default(autoincrement())
  nome             String
  numero           String
  categorias       String
  ContatoCategoria ContatoCategoria[]

  @@map("Contatos")
}

model Categoria {
  id               Int                @id
  nome             String
  ContatoCategoria ContatoCategoria[]

  @@map("Categorias")
}

model ContatoCategoria {
  id          Int       @id @default(autoincrement())
  contanto    Contato   @relation(fields: [idContato], references: [id])
  idContato   Int
  categoria   Categoria @relation(fields: [idCategoria], references: [id])
  idCategoria Int

  @@map("ContatoCategorias")
}
